{
  "plugins": ["fetch"],
  "extends": ["airbnb/base", "plugin:fetch/recommended", "eslint-config-netlify"],

  "rules": {        
    "no-underscore-dangle": "off",
    "import/extensions": ["error", "ignorePackages", {
      "js": "off"
    }],
    "import/no-unresolved": [
      2, 
      { "caseSensitive": false }
   ]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}